<% if current_user.present? %>
	<h1><%= "Поиск автоморфных чисел от 1 до заданного числа"%></h1>

	<%= form_with url: automorphic_result_path, method: :get do |form| %>
		<%= form.label 'Введите число, до которого хотите искать:'%> <br/>
		<%= form.number_field :stop_number %> <br/>
		<br/>
		<%= form.submit 'Найти числа', id: 'calculate-btn' %>
	<% end %>

<% else %>
	<p>Сначала авторизируйтесь</p> 
<% end %>
<p><%= link_to 'Вернуться на главную', root_path %></p>
